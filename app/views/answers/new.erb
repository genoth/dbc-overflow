<div>

  <h1><%= @question.title%></h1>
  <h2><%= @question.body%></h2>

  <form action="/answers" method="POST">
    <input type="hidden" name="question_id" value="<%= @question.id %>">
      <label for="body">Answer</label>
      <input type="text", name="body", id="answer">
      <input type="submit" value="Submit">
  </form>

</div>
