<h2>Comment on a question!</h2>
<div class="general_form">
<h3> Question: <%= @question.title  %></h3>
<p> <%= @question.body %> </p>

<div>
  <% if @errors %>
      <%= erb :'/partials/_errors' %>
  <% end %>
</div>

<form action="/questions/<%= @question.id %>/comments" method="POST">
  <textarea rows="4" cols="50" name="body" form="question_form" placeholder="Enter comment here"></textarea>
  <br>
  <input type="submit" value="Comment!">
</form>
</div>

